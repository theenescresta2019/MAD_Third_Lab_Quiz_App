<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="1. What is the plural of rhinoceros?"
            android:textColor="#1287A5"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
            tools:layout_editor_absoluteY="104dp" />


        <RadioGroup
            android:id="@+id/rgFirstQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--answer-->
            <RadioButton
                android:id="@+id/rbFirstA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. Rhinoceri" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. Rhinoceroses" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. Rhinocery" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="d. Rhinocerosi" />

        </RadioGroup>

        <!--        Second Question-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="2. Which number should be on the dots? 27, 9, 18, 6, 12, 4, ..."
            android:textColor="#1287A5"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
            tools:layout_editor_absoluteY="104dp" />


        <RadioGroup
            android:id="@+id/rgSecondQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a. 5" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="b. 6" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="c. 7" />

            <!--            right answer-->
            <RadioButton
                android:id="@+id/rbSecondD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="d. 8" />

        </RadioGroup>


        <!--        fourth question-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="3. Which of the following can be arranged into a 5-letter English word?"
            android:textColor="#1287A5"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
            tools:layout_editor_absoluteY="104dp" />


        <CheckBox
            android:id="@+id/cbFourthA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="a. H R G S T" />
        <!--answer-->
        <CheckBox
            android:id="@+id/cbFourthB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="b. R I L S A" />
        <!--answer-->
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="c. T O O M T" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="d. W Q R G S" />

        <!--        third question-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:text="4. Tomorrow is Tuesday. Which days was it in 15 days, but 3 weeks ago?"
            android:textColor="#1287A5"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat"
            tools:layout_editor_absoluteY="104dp" />
        <!--Tuesday-->
        <EditText
            android:id="@+id/txtThirdAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@android:drawable/ic_menu_save"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textIsSelectable="false"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"

            />


    </LinearLayout>
</ScrollView>
